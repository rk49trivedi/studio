{
  "buildCommand": "pnpm run build:client",
  "outputDirectory": "dist/spa",
  "installCommand": "pnpm install",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/((?!api|assets|.*\\.(js|css|ico|png|jpg|jpeg|svg|gif|woff|woff2|ttf|eot|txt|xml|webp|json|map)).*)",
      "destination": "/index.html"
    }
  ]
}

