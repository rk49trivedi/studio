{
  "version": 2,
  "buildCommand": "pnpm run build:client",
  "outputDirectory": "dist/spa",
  "installCommand": "pnpm install",
  "rewrites": [
    {
      "source": "/api/ping",
      "destination": "/api/ping"
    },
    {
      "source": "/api/demo",
      "destination": "/api/demo"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}

